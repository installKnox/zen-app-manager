{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zen-app-manager",
  "version": "0.3.0",
  "identifier": "io.github.d0ksan8.zen-app-manager",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Zen App Manager",
        "width": 800,
        "height": 600,
        "decorations": false,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": [
          "English",
          "Turkish"
        ],
        "displayLanguageSelector": true
      }
    }
  }
}